provider "azurerm" {
  version = ">= 1.38.9"
  features {}
}


resource "azurerm_firewall" "this" {
  name                = local.fw_name
  location            = var.location
  resource_group_name = var.resource_group_name

  ip_configuration {
    name                 = "configuration"
    subnet_id            = var.subnet_id
    public_ip_address_id = var.publicipid
  }

  tags = local.fw_tags
}

